# Theme
# class                 border        backgr.       text        indicator     child_border
client.focused          $numix_grey   $numix_grey   $numix_red  $numix_grey   $numix_red
client.focused_inactive $numix_darker $numix_darker $numix_grey $numix_darker $numix_darker
client.unfocused        $numix_darker $numix_darker $numix_grey $numix_darker $numix_darker
client.urgent           $numix_darker $numix_red    $numix_grey $numix_darker $numix_darker
client.placeholder      $numix_darker $numix_darker $numix_grey $numix_darker $numix_darker
client.background       $numix_darker

hide_edge_borders both

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

new_window pixel $border
mouse_warping none
force_display_urgency_hint 1000 ms

# Ensure that all windows have borders by default
for_window [class=".*"] border pixel $border

# Enable floating mode for some windows
for_window [class=$floating_windows] floating enable
for_window [window_type="notification"] floating enable; border none;
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable
# for_window [class="Google-chrome" title=" - Google Chrome$"] border none

# Go back to previous workspace with the same keys
workspace_auto_back_and_forth yes

